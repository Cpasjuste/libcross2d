void main(uniform float4x4 MVPMatrix,
          float4 a_Position, 
          float4 a_Color,
          float2 a_Texcoord0, 
          float4 out vPosition : POSITION,
          float4 out vColor : COLOR,
          float2 out vTexcoord0 : TEXCOORD0)
{
    
    vPosition = mul(a_Position, MVPMatrix);
    vColor = a_Color.rgba;
    vTexcoord0 = a_Texcoord0;
}
